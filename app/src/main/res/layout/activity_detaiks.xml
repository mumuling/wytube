<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/e8e8e8">

    <RelativeLayout
        android:id="@+id/rlss"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/back_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ty_fh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="发布通知"
            android:textSize="16sp"
            android:textColor="@color/main_def_text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_but"
            android:layout_toEndOf="@+id/back_but" />

    </RelativeLayout>



    <View
        android:layout_below="@+id/rlss"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_def_text_color"
        android:id="@+id/view" />

    <RelativeLayout
        android:id="@+id/Relaview1"
        android:layout_below="@+id/view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="16sp"
            android:textColor="@color/grey11"
            android:id="@+id/textView13" />

        <EditText
            android:id="@+id/edit_title"
            android:background="#00000000"
            android:hint="请输入标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/main_def_text_color"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView13"
            android:layout_toEndOf="@+id/textView13" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/Relaview1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_def_text_color"
        android:id="@+id/view1" />

    <RelativeLayout
        android:id="@+id/rela_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/app_def_text_color"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="1dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/content_text"
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint="添加相关描述"
                        android:inputType="textPersonName"
                        android:textColor="@color/app_call_option_text_color"
                        android:textColorHint="@color/app_def_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/tcjf_sc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_below="@+id/imageView23"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="删除"
                    android:textColor="@color/main_def_text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_modify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/app_main_color_green"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/tzts_xg"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/textView16"
                        android:layout_toStartOf="@+id/textView16" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="确认修改"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
