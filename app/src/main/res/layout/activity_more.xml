<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/personInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/itembg"
                android:gravity="center"
                android:orientation="horizontal" 
                android:clickable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="5dip"
                    android:adjustViewBounds="true"
                    android:background="@drawable/appgdtx" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" 
                        android:textSize="18dip"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/userAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:textSize="16dip"
                        android:textColor="@color/black"
                        android:text="账号：" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/companyInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/itembg"
                android:orientation="vertical" 
                android:clickable="true">

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:text="" 
                    android:clickable="false"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@drawable/apphsxt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:text="" 
                    android:focusable="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/itembg"
                android:gravity="center"
                android:orientation="horizontal" 
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:text="设置" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/questionBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/itembg"
                android:gravity="center"
                android:orientation="horizontal" 
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:text="问题反馈" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gprsSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/itembg"
                android:gravity="center"
                android:orientation="horizontal" 
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:text="流量查询" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/itembg"
                android:gravity="center"
                android:orientation="horizontal" 
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:text="关于云翌通" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>