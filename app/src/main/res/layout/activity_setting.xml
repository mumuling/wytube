<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/newInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@drawable/itembg"
        android:gravity="center"
        android:orientation="horizontal" 
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:gravity="left" >

            <TextView
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_marginLeft="25dip"
                android:gravity="left|center"
                android:text="新消息提醒"
                android:textColor="@color/black"
                android:textSize="18dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" >

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/apphsxt" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/callout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itembg"
        android:gravity="center"
        android:orientation="horizontal" 
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:gravity="left" >

            <TextView
                android:layout_width="80dip"
                android:layout_height="60dip"
                android:layout_marginLeft="25dip"
                android:gravity="left|center"
                android:text="呼出设置"
                android:textColor="@color/black"
                android:textSize="18dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" >

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/apphsxt" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/callin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itembg"
        android:gravity="center"
        android:orientation="horizontal" 
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:gravity="left" >

            <TextView
                android:layout_width="80dip"
                android:layout_height="60dip"
                android:layout_marginLeft="25dip"
                android:gravity="left|center"
                android:text="呼入设置"
                android:textColor="@color/black"
                android:textSize="18dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" >

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/apphsxt" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/callmove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itembg"
        android:gravity="center"
        android:orientation="horizontal" 
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:gravity="left" >

            <TextView
                android:layout_width="80dip"
                android:layout_height="60dip"
                android:layout_marginLeft="25dip"
                android:gravity="left|center"
                android:text="呼叫转移"
                android:textColor="@color/black"
                android:textSize="18dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" >

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/apphsxt" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/nativeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itembg"
        android:gravity="center"
        android:orientation="horizontal" 
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:gravity="left" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dip"
                android:gravity="left|center"
                android:text="本地区号设置"
                android:textColor="@color/black"
                android:textSize="18dip" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>