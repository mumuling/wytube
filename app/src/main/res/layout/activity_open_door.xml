<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#eeeeee">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center" android:paddingTop="20dp"
        android:paddingBottom="20dp" android:layout_marginTop="10dp"
        android:background="@color/white">
        <TextView
            android:text="自动开门设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_weight="1" android:gravity="center_vertical"
            android:layout_marginLeft="17dp" android:textSize="15sp" android:textColor="#a1a1a1"/>
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="25dp" android:id="@+id/open_gps"
            android:background="@drawable/checkcall" android:layout_marginRight="20dp"
            android:layout_gravity="center" android:textOff=" " android:textOn=" "
            android:onClick="openGPS"/>
    </LinearLayout>
    <TextView
        android:text="* 打开自动开门设置后 , 应用根据GPS定位系统 , 在一定范围内可自动开门"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/textView2"
        android:paddingLeft="30dp" android:paddingRight="30dp" android:textColor="#a1a1a1"
        android:layout_marginTop="10dp" android:gravity="center"/>
</LinearLayout>