    <RelativeLayout
        android:id="@+id/selectownertypeLine"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/ownercontact"
            android:layout_width="wrap_content"
