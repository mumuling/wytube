<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/e8e8e8">
    <RelativeLayout
        android:id="@+id/rlss"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/back_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ty_fh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="物业费详情"
            android:textSize="16sp"
            android:textColor="@color/main_def_text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_but"
            android:layout_toEndOf="@+id/back_but" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/rlss"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_def_text_color" />


    <LinearLayout
        android:id="@+id/linear_wyxq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="30dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="2017-8" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_xqname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="物业费"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/text_zt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="未缴"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Relati_s"
        android:layout_below="@+id/linear_wyxq"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_color_pass_color"
            android:textSize="32sp"
            android:text="284.40"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text_xq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_def_text_color"
            android:textSize="22sp"
            android:text="名江花园1栋8-2"
            android:layout_below="@+id/text_money"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relati_ss"
        android:layout_below="@+id/Relati_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_def_text_color99"
            android:textSize="12sp"
            android:text="单价: "/>
        <TextView
            android:id="@+id/text_peic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.8元"
            android:textColor="@color/main_def_text_color"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView20"
            android:layout_toEndOf="@+id/textView20" />

        <RelativeLayout
            android:id="@+id/jf_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_def_text_color"
                android:textSize="12sp"
                android:text="5-7 12:10"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:id="@+id/text_jf_types" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_def_text_color99"
                android:textSize="12sp"
                android:text="时间: "
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/text_jf_types"
                android:layout_toStartOf="@+id/text_jf_types" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relati_sqg2"
        android:layout_below="@+id/Relati_ss"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_def_text_color99"
            android:textSize="12sp"
            android:text="数量: "/>
        <TextView
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="158"
            android:textColor="@color/main_def_text_color"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView21"
            android:layout_toEndOf="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_def_text_color"
            android:textSize="12sp"
            android:text="自动生成物业费"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:id="@+id/text_jf_type" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_def_text_color99"
            android:textSize="12sp"
            android:text="备注: "
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/text_jf_type"
            android:layout_toStartOf="@+id/text_jf_type" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/publish_but"
        android:layout_below="@+id/relati_sqg2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:cardBackgroundColor="@color/app_main_color_green"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <TextView
            android:id="@+id/text_fb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="已完成收费"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
