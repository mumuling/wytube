<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
             android:background="#4c000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="41.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingTop="15dp"
                android:text="选择业主组"
                android:textColor="#999"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="16dp"
                android:paddingTop="15dp"
                android:text="确定"
                android:textColor="@color/app_main_color_green"
                android:textSize="18sp"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_ydyyzz"
            android:layout_width="match_parent"
            android:layout_height="54.5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text="一单元业主组"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_blue"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_contact"
                android:layout_gravity="center"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:background="@drawable/yz_xql"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"/>

        <RelativeLayout
            android:id="@+id/rl_rdyyzz"
            android:layout_width="match_parent"
            android:layout_height="54.5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_contact_er"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text="二单元业主组"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_blue2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/tv_contact_er"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/yz_xqh"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"/>

        <RelativeLayout
            android:id="@+id/rl_sdyyzz"
            android:layout_width="match_parent"
            android:layout_height="54.5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_contact_san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text="三单元业主组"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_blue3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/tv_contact_san"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/yz_xqh"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"/>

    </LinearLayout>


</FrameLayout>