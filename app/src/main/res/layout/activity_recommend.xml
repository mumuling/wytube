<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    android:background="#eeeeee">
<LinearLayout
        android:id="@+id/ll_wx_recommend"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="40dip"
        
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/recommend_wx" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送给微信好友"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_friendCircle_recommend"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="15dip"
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/recommend_friendcircle" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分享到朋友圈"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_qq_recommend"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="15dip"
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/recommend_qq" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送给QQ好友"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sms_recommend"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="15dip"
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/recommend_sms" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="通过短信推荐"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>   
</LinearLayout>