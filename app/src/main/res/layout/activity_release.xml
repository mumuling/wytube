<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/e8e8e8">

    <RelativeLayout
        android:id="@+id/rlss"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/back_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ty_fh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="发布通知"
            android:textSize="16sp"
            android:textColor="@color/main_def_text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_but"
            android:layout_toEndOf="@+id/back_but" />

    </RelativeLayout>



    <View
        android:layout_below="@+id/rlss"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_def_text_color"
        android:id="@+id/view" />

    <RelativeLayout
        android:id="@+id/Relaview1"
        android:layout_below="@+id/view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="16sp"
            android:textColor="@color/grey11"
            android:id="@+id/textView13" />

        <EditText
            android:id="@+id/edit_title"
            android:background="#00000000"
            android:hint="请输入标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/main_def_text_color"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView13"
            android:layout_toEndOf="@+id/textView13" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/Relaview1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_def_text_color"
        android:id="@+id/view1" />

    <RelativeLayout
        android:id="@+id/rela_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/app_def_text_color"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="1dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/content_text"
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint="添加相关描述"
                        android:inputType="textPersonName"
                        android:textColor="@color/app_call_option_text_color"
                        android:textColorHint="@color/app_def_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp">

        <android.support.v7.widget.CardView
            android:id="@+id/borrow_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/app_main_color_green"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <TextView
                android:id="@+id/text_xq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="15dp"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
