<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:id="@+id/rlrelatype">
    <!--********
        产品参数
        ********-->
    <ScrollView
        android:id="@+id/sv_blocok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/but_Return"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请选择拨打方式"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/TextColor_quotient"
                android:layout_above="@+id/view1"
                android:textSize="14dp" />

            <View
                android:layout_above="@+id/lv_typelist"
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_def_text_color" />

         <!--   <ListView
                android:id="@+id/lv_typelist"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_above="@+id/but_Return"
                android:layout_alignParentStart="true"
                android:scrollbars="none"/>-->
            <android.support.v7.widget.CardView
                android:id="@+id/cv_tell"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/app_main_color_green"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <LinearLayout
                    android:id="@+id/ll_dhtell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话拨打"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_agreebtn"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/app_main_color_green"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <LinearLayout
                    android:id="@+id/ll_mjtell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门禁拨打"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_above="@+id/lv_typelist"
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_def_text_color" />

            <View
                android:layout_above="@+id/lv_typelist"
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_def_text_color" />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/tv_diss"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="取消"/>


        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/but_Return"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true" />
</RelativeLayout>