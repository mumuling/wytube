<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dip"   
    android:layout_width="match_parent"
    >
    
   <ImageView  
       android:id="@+id/buddy_listview_child_avatar"
       android:layout_width="50dip"
       android:layout_height="50dip" 
       android:layout_alignParentLeft="true"  
       android:layout_alignParentTop="true"
       android:layout_marginLeft="10dp"  
       android:background="@drawable/qqzai"
         /> 
         
    <TextView  
        android:id="@+id/buddy_listview_child_nick" 
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buddy_listview_child_avatar"
        android:text="昵称"  
        android:textColor="@color/black"
        android:singleLine="true"
        android:ellipsize="end" 
        android:layout_marginRight="120dip"
        />
    
    <TextView  
        android:id="@+id/msgDate" 
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:text=""  
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" 
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dip"
        /> 
        
    <TextView  
        android:id="@+id/msgCount" 
        android:layout_width="30dip"  
        android:layout_height="wrap_content"  
        android:text=""  
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dip"
        android:background="@color/niticeCountColor"
        android:gravity="center"
        android:visibility="gone"
        /> 
         
     <TextView  
        android:id="@+id/buddy_listview_child_trends"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignLeft="@+id/buddy_listview_child_nick" 
        android:layout_alignParentBottom="true" 
        android:text="该好友暂时没有新动态"  
        android:singleLine="true"
		android:ellipsize="end"
		android:textColor="@color/black"
        /> 
        
     <TextView  
       android:id="@+id/buddy_no_child"
       android:layout_width="fill_parent"
       android:layout_height="40dip" 
       android:text="暂无任何好友"  
       android:gravity="center"
       android:textColor="@color/black"
         /> 
</RelativeLayout >
