<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itembg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ocimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:adjustViewBounds="true"
            android:src="@drawable/appgdtx" />

        <TextView
            android:id="@+id/ocimg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:text="开心快乐每一天" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#aaaaaa" >

        <TextView
            android:id="@+id/ocposition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:singleLine="true"
            android:text="经理" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="25dip"
                android:layout_marginTop="20dip"
                android:adjustViewBounds="true"
                android:src="@drawable/head" />

            <ImageView
                android:layout_width="5dip"
                android:layout_height="30dip"
                android:layout_marginRight="15dip"
                android:src="@drawable/sxt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="45dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业分机" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/sipAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="866" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="15dip"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/com_msg"
                    android:layout_width="40dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:src="@drawable/come_dx" />

                <ImageView
                    android:id="@+id/com_call"
                    android:layout_width="40dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:src="@drawable/come_jt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="25dip"
                android:adjustViewBounds="true"
                android:src="@drawable/head" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="25dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678910" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="15dip"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/sel_msg"
                    android:layout_width="40dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="15dip"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:src="@drawable/come_dx" />

                <ImageView
                    android:id="@+id/sel_call"
                    android:layout_width="40dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:src="@drawable/come_jt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>